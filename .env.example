# ============================================
# TELEGRAM TRAVEL BOT - ENVIRONMENT VARIABLES
# ============================================

# =========== TELEGRAM BOT ===========
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
ADMIN_TELEGRAM_IDS=123456789,987654321

# =========== API KEYS ===========
# Kiwi Tequila API (CRITICAL for virtual interlining)
KIWI_API_KEY=your_kiwi_tequila_api_key_here
KIWI_API_URL=https://api.tequila.kiwi.com
KIWI_AFFILIATE_ID=your_kiwi_affiliate_id

# Travelpayouts API
TRAVELPAYOUTS_API_KEY=your_travelpayouts_api_key
TRAVELPAYOUTS_MARKER=your_travelpayouts_marker
TRAVELPAYOUTS_AFFILIATE_ID=your_affiliate_id

# Skyscanner API
SKYSCANNER_API_KEY=your_skyscanner_api_key
SKYSCANNER_AFFILIATE_ID=your_skyscanner_affiliate_id

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4

# =========== DATABASE ===========
DATABASE_URL=postgresql://user:password@localhost:5432/travelbot
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# =========== SERVER ===========
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
TRUST_PROXY=1

# =========== CACHING ===========
CACHE_TTL=3600
CACHE_ENABLED=true
EXCHANGE_RATE_TTL=3600
ROUTE_CACHE_TTL=7200

# =========== RATE LIMITING ===========
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=30

# =========== LOGGING ===========
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/travel-bot.log

# =========== FEATURES ===========
ENABLE_VIRTUAL_INTERLINING=true
ENABLE_AFFILIATE_LINKS=true
ENABLE_SEARCH_HISTORY=true
ENABLE_PRICE_ALERTS=false

# =========== AFRICA FOCUS ===========
DEFAULT_CURRENCY=ZAR
DEFAULT_COUNTRY=ZA
POPULAR_AIRPORTS=JNB,CPT,DUR,LOS,ACC,NBO,ADD,CAI,DXB,DOH

# =========== SECURITY ===========
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here
